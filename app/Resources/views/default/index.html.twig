{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		{% for post in posts %}
			<div>
				<h3><a href="{{ path('post_show', {'id': post.id }) }}">{{ post.title }}</a></h3>
				{{ post.lead }}
			</div>
		{% endfor %}

		<div class="navigation">
			{{ knp_pagination_render(posts) }}
		</div>
	</div>
	
{% endblock %}
